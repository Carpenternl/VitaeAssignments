<UserControl x:Class="BattleShipGame.GameMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShipGame"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="550" Height="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Self}}" >
    <Grid x:Name="Body" Height="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Self}}" MouseLeftButtonUp="Grid_MouseLeftButtonUp" ShowGridLines="True" Background="#00000000" MouseMove="Body_MouseMove">
        <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
        <Grid.RowDefinitions></Grid.RowDefinitions>
    </Grid>
</UserControl>
