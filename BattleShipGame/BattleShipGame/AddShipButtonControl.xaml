<UserControl x:Class="BattleShipGame.AddShipButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShipGame"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150" Background="Orange" x:Name="Controlcontainer" BorderBrush="Black" BorderThickness="1,0,0,1">
    <StackPanel x:Name="ControlContent" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Label Content="{Binding NewShipType, ElementName=Controlcontainer}"/>
        <Label x:Name="CounterBefore" Content="(" Padding="0,5,0,5"/>
        <Label x:Name="Counter" Padding="0,5" Content="{Binding ShipCount, ElementName=Controlcontainer}" />
        <Label x:Name="CounterAfter" Content="left)"/>
    </StackPanel>
</UserControl>
