<Window x:Class="RomanCalculator.ValueWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RomanCalculator"
        mc:Ignorable="d"
        Title="ValueWarningWindow" Height="200" Width="300">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="1" x:Name="Message" Content="Hello World"/>
        <Button Margin="0,2,2,2" Grid.Row="1" Grid.Column="0" x:Name="Cancel" Content="CANCEL" IsCancel="True" Click="Cancel_Click" />
        <Button Margin="2,2,0,2" Grid.Row="1" Grid.Column="1" x:Name="OK" Content="OK" IsDefault="True" Click="OK_Click"/>
    </Grid>
</Window>
