<Window x:Class="RomanCalculator.ValueWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RomanCalculator"
        mc:Ignorable="d"
        Title="ERROR - INVALID VALUE" HorizontalAlignment="Left" VerticalAlignment="Top" SizeToContent="WidthAndHeight" MinWidth="200" Margin="1,0,0,0" MaxWidth="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" x:Name="ErrorMessage" Content="You are not supposed to see this message"
               Margin="0,0,0.2,0.4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="OK_Button" Grid.Column="0" Grid.Row="1" Content="OK" IsDefault="True" Click="OK_Button_Click" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
